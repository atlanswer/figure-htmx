{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "inlineSources": false,
    "isolatedModules": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}
